<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="31" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.ProjectApp" >
        <activity
            android:name="com.example.projectapp.MarksCalculationActivity"
            android:label="Term Marks Calculator" >
        </activity>
        <activity android:name="com.example.projectapp.DefaulterListActivity" >
        </activity>
        <activity
            android:name="com.example.projectapp.DisplayAttendanceActivity"
            android:label="ATTENDANCE (Microprocessor) 2021"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.ProjectApp.NoActionBar" >
        </activity>
        <activity android:name="com.example.projectapp.MenuActivity" >
        </activity>
        <activity android:name="com.example.projectapp.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>